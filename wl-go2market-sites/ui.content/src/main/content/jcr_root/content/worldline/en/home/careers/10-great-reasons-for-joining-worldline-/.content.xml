                        jcr:lastModifiedBy="fr20437"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="gotomarket/components/layout/grid"
                        list="[{&quot;columnSize&quot;:&quot;grid-col-8&quot;},{&quot;columnSize&quot;:&quot;grid-col-4&quot;}]">
                        <column2 jcr:primaryType="nt:unstructured">
                            <articlebriefitem_cop
                                jcr:created="{Date}2017-10-15T16:28:47.032+02:00"
                                jcr:createdBy="fr20437"
                                jcr:lastModified="{Date}2017-11-28T15:06:40.537+01:00"
                                jcr:lastModifiedBy="fr20437"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="gotomarket/components/content/articlebriefitem"
                                alignment="h"
                                isDateHidden="true"
                                isExternalUrl="false"
                                isLinkHidden="true"
                                isSubtitleHidden="true"
                                isTitleHidden="false"
                                noExtention="false"
                                text="Worldline is present all over the world, so you get the opportunity to develop wherever in the world you want to including India, Italy, Germany, the UK, France and Argentina. The world is your oyster when you join Worldline. Working in another country is something that is encouraged by our policy of encouraging internal mobility, and it is a great opportunity for further development."
                                title="We can offer you opportunities all over the world"/>
                        </column2>
                        <column1 jcr:primaryType="nt:unstructured">
                            <articlebriefitem_cop
                                jcr:created="{Date}2017-10-15T16:33:19.740+02:00"
                                jcr:createdBy="fr20437"
                                jcr:lastModified="{Date}2017-10-17T14:09:14.081+02:00"
                                jcr:lastModifiedBy="a599132"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="gotomarket/components/content/articlebriefitem"
                                imagePath="/content/dam/worldline/images/article-pictures/work-placement.png"
                                isDateHidden="true"
                                isExternalUrl="false"
                                isLinkHidden="true"
                                isSubtitleHidden="true"
                                isTitleHidden="false"
                                noExtention="false"
                                text="We hire lots of interns and work placement trainees here at Worldline, and we encourage vocational placements among young graduates and graduates of the future. They get a fantastic opportunity to join a fast-growing organisation that encourages innovation and investment, and 60% of our interns and work placement people have been offered a permanent contract following their first experience here at Worldline."
                                title=" We encourage work placements"/>
                        </column1>
                    </grid>
