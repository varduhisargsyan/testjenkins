<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Overview Properties"
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <title
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Title"
                            name="./title"/>
                    <isTitleHidden
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                            name="./isTitleHidden"
                            uncheckedValue="false"
                            text="Title Hidden"
                            value="true"/>
                    <heading
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Heading"
                            name="./heading"/>
                    <isHeadingHidden
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                            name="./isHeadingHidden"
                            uncheckedValue="false"
                            text="Heading Hidden"
                            value="true"/>
                    <dateText
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Date"
                            name="./dateText"/>
                    <isDateTextHidden
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                            name="./isDateTextHidden"
                            uncheckedValue="false"
                            text="Date Text Hidden"
                            value="true"/>
                    <results
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Results"
                            name="./results"/>
                    <isResultsHidden
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                            name="./isResultsHidden"
                            uncheckedValue="false"
                            text="Results Hidden"
                            value="true"/>
                    <previous
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Previous"
                            name="./previous"/>
                    <isPreviousHidden
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                            name="./isPreviousHidden"
                            uncheckedValue="false"
                            text="Previous Hidden"
                            value="true"/>
                    <next
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/textfield"
                            fieldLabel="Next"
                            name="./next"/>
                    <isNextHidden
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                            name="./isNextHidden"
                            uncheckedValue="false"
                            text="Next Hidden"
                            value="true"/>
                    <isDescHidden
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/checkbox"
                            name="./isDescHidden"
                            uncheckedValue="false"
                            text="Description Hidden"
                            value="true"/>
                    <tags
                            cq:showOnCreate="{Boolean}true"
                            jcr:primaryType="cq:Widget"
                            sling:resourceType="cq/gui/components/common/tagspicker"
                            allowBulkEdit="{Boolean}true"
                            allowCreate="{Boolean}true"
                            cq-msm-lockable="cq:tags"
                            fieldLabel="Content Items"
                            name="./tags"/>
                    <paths
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Start paths"
                            sling:resourceType="granite/ui/components/foundation/form/fieldset">
                        <items jcr:primaryType="nt:unstructured">
                            <keypath
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/multifield">
                                <field
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        rootPath="/content"
                                        name="./startPaths"
                                        required="{Boolean}true"/>
                            </keypath>
                        </items>
                    </paths>
                    <count
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/form/select"
                            fieldLabel="Items Per Page"
                            name="./itemsPerPage">
                        <items jcr:primaryType="nt:unstructured">
                            <option1 jcr:primaryType="nt:unstructured"  value="5" text="5"/>
                            <option2 jcr:primaryType="nt:unstructured"  value="10" text="10"/>
                            <option3 jcr:primaryType="nt:unstructured"  value="15" text="15"/>
                            <option4 jcr:primaryType="nt:unstructured"  value="20" text="20"/>
                            <option5 jcr:primaryType="nt:unstructured"  value="25" text="25"/>
                        </items>
                    </count>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
